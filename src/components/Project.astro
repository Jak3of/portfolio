---
interface Props {
  title: string;
  description: string;
  image?: string;
  technologies: string[];
  github?: string;
  demo?: string;
}

const { title, description, image = '', technologies, github, demo } = Astro.props;
---

<div class="project-card snap-center my-4">
  <div class="relative group bg-[#0f172a] rounded-xl overflow-hidden h-full mx-auto">
    <div class="flex h-full">
      <div class="w-2/5">
        <img 
          src={image} 
          alt={title}
          class="w-full h-full object-cover"
        />
      </div>
      <div class="w-3/5 p-6">
        <h3 class="text-2xl font-titilium text-white mb-2">{title}</h3>
        <p class="text-sm text-white/70 mb-4 line-clamp-2">{description}</p>
        <div class="flex flex-wrap gap-2 mb-4">
          {technologies.map((tech) => (
            <span class="tech-tag">{tech}</span>
          ))}
        </div>
        <div class="flex gap-4">
          {github && (
            <a href={github} target="_blank" rel="noopener" class="project-link">
              <i class="fas fa-code mr-2"></i>
              CÃ³digo
            </a>
          )}
          {demo && (
            <a href={demo} target="_blank" rel="noopener" class="project-link">
              <i class="fas fa-external-link-alt mr-2"></i>
              Preview
            </a>
          )}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .tech-tag {
    @apply px-3 py-1 rounded-full text-xs font-medium 
    bg-blue-500/20 text-blue-400 border border-blue-500/30;
  }

  .project-link {
    @apply inline-flex items-center text-sm text-blue-400 hover:text-blue-300 
    transition-colors;
  }
</style>
